<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="ptrHeaderStyle">@style/PullToRefresh</item>
        <item name="android:listViewStyle">@style/ListView</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/header</item>
        <item name="android:displayOptions">showHome|useLogo</item>
    </style>

    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="DialogTitle">
    </style>

    <style name="QuestionDialog">
        <item name="android:padding">5sp</item>
    </style>

    <style name="Tab">
        <item name="android:textSize">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:color">@color/white</item>
        <item name="android:alpha">100</item>
    </style>

    <style name="avatar">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">3dp</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="PullToRefresh" parent="android:Widget">
        <item name="ptrPullText">@string/down</item>
        <item name="ptrRefreshingText">@string/refreshing</item>
        <item name="ptrReleaseText">@string/release</item>
    </style>
