    <style name="Box">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="JokeListItem">
        <item name="android:background">@drawable/boxshadow</item>
    </style>

    <style name="JokeBody">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">5sp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/line</item>
    </style>
    <style name="ActionLine" parent="HorizontalLine">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="RewardLine" parent="ActionLine">
        <item name="android:background">@color/light_gray</item>
    </style>
    <style name="AnswerLine" parent="ActionLine">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="BadgeLine" parent="ActionLine">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="JokeAction">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="ActionIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">3sp</item>
        <item name="android:paddingRight">5sp</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ActionIconExtraMargin" parent="ActionIcon">
        <item name="android:layout_marginRight">10sp</item>
    </style>

    <style name="SelectedIcon" parent="ActionIcon">
        <item name="android:textColor">#43a4fe</item>
    </style>

    <style name="HeaderTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DrawerItem">
        <item name="android:padding">5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="DrawerItemIcon">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#43a4fe</item>
        <item name="android:padding">5dp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="DrawerItemLabel">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#43a4fe</item>
        <item name="android:padding">5dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Page">
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="DarkPage">
        <item name="android:background">@drawable/inverse_background</item>
    </style>

    <style name="Input">
        <item name="android:textColorHint">@color/blue</item>
    </style>

    <style name="Button">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">5sp</item>
    </style>

    <style name="Primary" parent="Button">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="Secondary" parent="Button">
        <item name="android:background">@color/dark_gray</item>
    </style>
    <style name="SecondaryLight" parent="Button">
        <item name="android:background">@color/light_gray</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Notes">
        <item name="android:color">@color/yellow</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="RewardInline">
        <item name="android:background">@color/darker_gray</item>
    </style>
    <style name="Reward" parent="RewardInline">
        <item name="android:layout_marginBottom">3px</item>
    </style>

    <style name="RewardImage">
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="RewardShortInstruction">
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">5sp</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>


    <style name="Expiry">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">5sp</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="answer">
    </style>

    <style name="H1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffF63759</item>
    </style>

    <style name="H2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#3AAAF8</item>
    </style>

    <style name="P">
        <item name="android:gravity">right</item>
    </style>

    <style name="BulletList" parent="P">
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">5sp</item>
    </style>

    <style name="BadgeItem">
        <item name="android:gravity">right|center_vertical</item>
    </style>
    <style name="BadgeIcon">
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="BadgeText">
        <item name="android:textColor">@color/yellow</item>
    </style>

</resources>
