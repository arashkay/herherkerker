- content_for :head do
  =javascript_include_tag "chart.min"
  :javascript
    $(function(){
      hhkk.charts.registrations( #{@registrations.to_json} );
      hhkk.charts.daily_users( #{@daily_users.to_json}, #{@inactive_users.to_json} );
      hhkk.charts.rewards( #{@rewards.to_json}, #{@collected.to_json}, #{@total_rewards.to_json} );
      hhkk.charts.versions( #{@versions.to_json} );
      hhkk.charts.total_users( #{@total_users.to_json} );
      hhkk.charts.preferences( #{@preferences.to_json}, #{@preferences_label} );
      hhkk.charts.age( #{@age.to_json}, #{@age_label} );
    });
.center
  .row-fluid
    .span6
      %h3 Daily Registrations
      %canvas#registrations{ width: '300', height: '200' }
    .span6
      %h3 Daily Users
      %canvas#dailyusers{ width: '300', height: '200' }
  .row-fluid
    .span6
      %h3 Daily Rewards
      %canvas#rewards{ width: '300', height: '200' }
      .legends.fn-reward-legend
    .span6
      %h3 Device Version
      %canvas#versions{ width: '300', height: '200' }
      .legends.fn-version-legend
  .row-fluid
    .span6
      %h3 Total Users
      %canvas#totalusers{ width: '300', height: '200' }
      .legends.fn-total-users-legend
    .span6
      %h3 Preferences
      %canvas#preferences{ width: '300', height: '200' }
      .legends.fn-preferences-legend
  .row
    .span6
      %h3 AGE GROUPS
      %canvas#age{ width: '300', height: '200' }
      .legends.fn-age-legend
