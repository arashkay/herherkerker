!!! 5
%html#page
  %head
    %title HerHer KerKer
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    =stylesheet_link_tag "all", :media => "all"
    /[if IE 7]
      =stylesheet_link_tag "assets/font-awesome/css/font-awesome-ie7.min.css", :media => "all"
    =javascript_include_tag "all"
    =yield :head
    :javascript
      $(function(){
        hhkk.init();
      });
    =csrf_meta_tags
    -if Rails.env == 'production'
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-11707985-9', 'herherkerker.com');
        ga('send', 'pageview');

  %body
    .loading.fn-loading
      Please Wait ...
    #new_message.modal.hide.fade
      .modal-header
        %i.icon-remove-sign.close{ :type => :button, :data => { :dismiss => :modal, :aria => { :hidden => :true } } }
        %h3 New joke
      .modal-body
        %textarea{ :name => 'message[body]' }
      .modal-footer
        %a.btn{ :href => '#', :data => { :dismiss => :modal } } Close
        %a.btn.btn-primary{ :data => { :remote => messages_path, :success => 'hhkk.saved', :parent => '#new_message' } } Send
    .tools
      .container
        %span Have something funny to say?
        %a.btn{ :href => '#new_message', :data => { :toggle => :modal } } Send
    .container
      =yield

